@model HRMS.Models.AddEmployeView 


<div class="container">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-4 border border-primary rounded pl-5 pr-5 pb-5 ">
            <h2 class="text-center text-dark">Sign In</h2>
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                     <label class="form-label">UserName</label>
                    <input type="text" name="Name" id="Name" placeholder="enter username" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div> 

                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password" name="password" id="password" placeholder="enter password" class="form-control" autocomplete="off" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    
                    <input type="submit" asp-controller="Employe" asp-action="Login" class="btn btn-block btn-primary mb-2" value="Log In" />
                </div>
            </form>
            <div class="col-8">
                <a asp-action="Add" class="text-decoration-none float-start mt-2" asp-route-returnurl="@ViewData["ReturnUrl"]">Don't have account?</a>
            </div>
        </div>
    </div>
</div>
